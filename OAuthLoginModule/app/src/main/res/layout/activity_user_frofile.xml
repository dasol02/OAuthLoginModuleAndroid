<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <TextView
        android:id="@+id/text_title_user_frofile"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textSize="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_user_frofile"
        android:layout_below="@id/text_title_user_frofile"
        android:layout_above="@id/linear_user_frofile"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/linear_user_frofile"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:id="@+id/button_delete"
            android:text="DELETE"
            android:layout_width="0dp"
            android:layout_height="60dp" />

        <Button
            android:layout_weight="1"
            android:id="@+id/button_lougot"
            android:text="LOGOUT"
            android:layout_width="0dp"
            android:layout_height="60dp" />
    </LinearLayout>


</RelativeLayout>